    <properties>
		<property key="booleanMicroflow" type="microflow" required="false">
			<caption>Boolean Microflow</caption>
			<category>Data source</category>
			<description>Select the Microflow that determines editability.</description>
			<returnType type="Boolean" />
		</property>
		<property key="subscribeEntity" type="entity" required="false">
		  <caption>Entity</caption>
		  <category>Data source</category>
		  <description>The entity that holds the boolean attribute.</description>
		</property>
		<property key="booleanAttribute" type="attribute" entityProperty="subscribeEntity" required="false">
		  <caption>Boolean Attribute</caption>
		  <category>Data source</category>
		  <description>The field that holds the boolean for conditional editability.</description>
		  <attributeTypes>
			<attributeType name="Boolean"/>
		  </attributeTypes>
		</property>
		<property key="editableOnTrue" type="boolean" defaultValue="true">
		  <caption>Editable On True</caption>
		  <category>Data source</category>
		  <description>When set to No, editability will be set on whether the boolean attribute has a false value. By default editability is set when boolean has true value.</description>
		</property>
		<property key="buttonClass" type="string" required="false">
		  <caption>Button Class</caption>
		  <category>Data source</category>
		  <description>If you would like some buttons which need a context to not be accessible a CSS class should be added in the Modeler. The widget will check that class and set editablity accordingly.</description>
		</property>		
		<property key="buttonDisable" type="boolean" defaultValue="true">
		  <caption>Grey-out button</caption>
		  <category>Data source</category>
		  <description>When set to false, the buttons will be hidden, when set to true the buttons will be greyed-out (disabled).</description>
		</property>
		<property key="enableLogging" type="boolean" defaultValue="false">
		  <caption>Enable Logging</caption>
		  <category>Logging</category>
		  <description>The boolean can enable/disable logging on this widget for debugging purposes.</description>
		</property>
    </properties>
</widget>

